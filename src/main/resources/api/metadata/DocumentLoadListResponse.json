{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "text-segments": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "metadata": {
              "type": "object",
              "properties": {
                "index": {
                  "type": "integer"
                },
                "file_type": {
                  "type": "string"
                },
                "absolute_directory_path": {
                  "type": "string"
                },
                "file_name": {
                  "type": "string"
                },
                "source": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                }
              }
            }
          },
          "required": ["text", "metadata"]
        },
        "additionalProperties": true
      }
    },
    "required": ["text-segments"]
  }
}
